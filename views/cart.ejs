<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Reports</title>

    <%- include('./head.ejs') %>
</head>
<body>
<%- include('./header.ejs') %>
<main>
    <div class="col-sm-6">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">S.No</th>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            <% var len=[items.username,items.itemname]%>
            <% for(var i=0; i<items.length; i++) {%>
                <tr>
                    <th scope="row">
                        <%= i+1 %>
                    </th>
                    <td>
                        <%= items[i].itemname%>
                    </td>
                    <td>
                        $<%= items[i].itemprice%>
                    </td>
                    <td>
                        <form action="/buy" method="post">
                            <input type="hidden" name="item_buy_username" value=<%= items[i].username%>>
                            <input type="hidden" name="item_buy_itemname" value=<%= items[i].itemname%>>
                            <input type="hidden" name="item_buy_itemprice" value=<%= items[i].itemprice%>>
                            <button name="item1" id="samsung">BUY NOW</button>
                        </form>
                        <form action="/delete" method="post">
                            <input type="hidden" name="item_remove_username" value=<%= items[i].username%>>
                            <input type="hidden" name="item_remove_itemname" value=<%= items[i].itemname%>>
                            <button name="item2" id="samsung">Remove</button>
                        </form>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
    </div>

</main>

<footer>
    <%- include('./footer.ejs') %>
</footer>

</body>
</html>