<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Reports</title>

    <%- include('./head.ejs') %>
</head>
<body>
<%- include('./header.ejs') %>
<main>
    <div class="col-sm-6">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">S.No</th>
                <th scope="col">Product Purchased</th>
                <th scope="col">Price</th>
                <th scope="col">Date and TIme of Purchase</th>
                <th scope="col">Status</th>
            </tr>
            </thead>
            <tbody>
            <% var len=[items.username,items.itemname]%>
            <% for(var i=0; i<items.length; i++) {%>
                <tr>
                    <th scope="row">
                        <%= i+1 %>
                    </th>
                    <td>
                        <%= items[i].itemname%>
                    </td>
                    <td>
                        $<%= items[i].itemprice%>
                    </td>
                    <td>
                        <%= items[i].timestamp%>
                    </td>
                    <td>
                        <b>To be delivered shortly!</b>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
    </div>

</main>

<footer>
    <%- include('./footer.ejs') %>
</footer>

</body>
</html>